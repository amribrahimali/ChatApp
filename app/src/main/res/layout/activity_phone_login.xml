<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:padding="8dp"
        android:background="@drawable/inputs"
        android:hint="Enter phone number here.."
        android:textSize="15sp"
        android:textAllCaps="false"
        android:drawableStart="@drawable/phone"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/phone_verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:hint="Enter verification code here.."
        android:layout_below="@id/phone_number_input"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:drawableStart="@drawable/password"
        android:textStyle="bold"
        android:visibility="invisible"/>
    
    <Button
        android:id="@+id/send_ver_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send verification code"
        android:textAllCaps="false"
        android:layout_below="@+id/phone_verification_code_input"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_below="@+id/send_ver_code_input"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>

</RelativeLayout>